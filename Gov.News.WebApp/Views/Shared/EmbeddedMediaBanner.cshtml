@using Gov.News.Website.Models
@using Gov.News.Website.Helpers
@using Gov.News.Api.Models

@model FooterViewModel

<div class="media-container">
    <div class="media-sections">
        <div class="photos">
            <h3>Photos</h3>
            <p>View the @(Model.FlickrSource)'s latest photos on Flickr</p>
            @if (Model.LatestFlickrUri != null) {
                @AssetHelper.RenderPostAssetThumbnail(Model.LatestFlickrUri, true)
            }
            <a id="mediaBannerPhotos" href="@Model.FlickrMoreUri" class="read-more" target="_blank">More Photos</a>
        </div>
        <div class="videos">
            <h3>Videos</h3>
            <p>View the @(Model.YoutubeSource)'s latest videos on YouTube</p>
            @if (Model.LatestYoutubeUri != null)
            {
                @AssetHelper.RenderPostAssetThumbnail(Model.LatestYoutubeUri)
            }
            <a id="mediaBannerVideos" href="@Model.YoutubeMoreUri" class="read-more" target="_blank">More Videos</a>
        </div>
    </div>


    <div class="connect-with-bc row sm-hidden md-hidden lg-hidden">
        <h4><a href="@Model.FlickrMoreUri" target="_blank">Photos</a></h4>
        <p>View the @(Model.FlickrSource)'s latest photos on Flickr.</p>

        <h4><a href="@Model.YoutubeMoreUri" target="_blank">Videos</a></h4>
        <p>Watch the @(Model.YoutubeSource)'s latest videos on YouTube.</p>
    </div>


</div>
